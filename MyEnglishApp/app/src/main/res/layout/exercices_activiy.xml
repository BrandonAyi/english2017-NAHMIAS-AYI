<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/darker_gray">

    <ImageView
        android:layout_width="330dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/exercises"
        android:id="@+id/exoImage"
        android:layout_weight="0.58" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"></Space>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:text="QCM n°1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:id="@+id/qcm"
            android:textSize="18sp"
            android:fontFamily="casual"
            android:textStyle="bold" />

    </FrameLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"></Space>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

    <TextView
        android:text="IMAGES TEST"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:id="@+id/imageTest"
        android:textSize="18sp"
        android:fontFamily="casual"
        android:textStyle="bold" />

    </FrameLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"></Space>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

    <TextView
        android:text="CORRECT TENSE"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:id="@+id/correctTense"
        android:textSize="18sp"
        android:fontFamily="casual"
        android:textStyle="bold" />

    </FrameLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"></Space>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

    <TextView
        android:text="QCM n°2"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:id="@+id/QCM2"
        android:textSize="18sp"
        android:fontFamily="casual"
        android:textStyle="bold" />

    </FrameLayout>

</LinearLayout>