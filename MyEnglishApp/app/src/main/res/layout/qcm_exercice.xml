<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_weight="0.00"
        android:layout_height="20dp"></Space>

    <TextView
        android:text="Chose the good answer !"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#ff0000"/>

    <Space
        android:layout_width="match_parent"
        android:layout_weight="0.00"
        android:layout_height="20dp"></Space>

    <TextView
        android:text="He was drunk: he had had one ... ."
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView1" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
            android:text="too"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton1" />

        <RadioButton
            android:text="too much"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton2" />

        <RadioButton
            android:text="too many"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton3" />
    </RadioGroup>

    <TextView
        android:text="She killed him ... jealousy."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

    <RadioButton
        android:text="by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton4" />

    <RadioButton
        android:text="over"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton5" />

    <RadioButton
        android:text="out of"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton6" />
    </RadioGroup>

    <TextView
        android:text="John, in ... car I came home, lives next door."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4" />

    <RadioGroup
        android:id="@+id/radioGroup3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
            android:text="whose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton7" />

        <RadioButton
            android:text="which"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton8" />

        <RadioButton
            android:text="whom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton9" />
    </RadioGroup>

    <TextView
        android:text="Why not ... away, if you don't like it here?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5" />

    <RadioGroup
        android:id="@+id/radioGroup4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
            android:text="to go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton10" />

        <RadioButton
            android:text="going"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton11" />

        <RadioButton
            android:text="go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton12" />
    </RadioGroup>

    <TextView
        android:text="Can you imagine ... pleasant it was?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6" />

    <RadioGroup
        android:id="@+id/radioGroup5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
            android:text="what"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton13" />

        <RadioButton
            android:text="how"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton14" />

        <RadioButton
            android:text="whether"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton15" />
    </RadioGroup>

    <TextView
        android:text="He does everything he can ... his friend."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7" />

    <RadioGroup
        android:id="@+id/radioGroup6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
            android:text="for help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton16" />

        <RadioButton
            android:text="to help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton17" />

        <RadioButton
            android:text="helping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton18" />
    </RadioGroup>

    <Space
        android:layout_width="match_parent"
        android:layout_weight="0.00"
        android:layout_height="20dp"></Space>

    <Button
        android:text="Check Score"
        android:textColor="#ff2600"
        android:layout_gravity="center"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonScore" />

</LinearLayout>
