<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:text="Choose the good answer !"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#ff0000"
        android:textSize="18sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_weight="0.00"
        android:layout_height="20dp"></Space>

    <TextView
        android:text="He was drunk: he had had one ... ."
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:textSize="14sp"/>

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
            android:text="too"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton1"
            android:textSize="14sp"/>

        <RadioButton
            android:text="too much"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton2"
            android:textSize="14sp"/>

        <RadioButton
            android:text="too many"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton3"
            android:textSize="14sp"/>
    </RadioGroup>

    <TextView
        android:text="She killed him ... jealousy."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="14sp"/>

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

    <RadioButton
        android:text="by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton4"
        android:textSize="14sp"/>

    <RadioButton
        android:text="over"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton5"
        android:textSize="14sp"/>

    <RadioButton
        android:text="out of"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton6"
        android:textSize="14sp"/>
    </RadioGroup>

    <TextView
        android:text="John, in ... car I came home, lives next door."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="14sp"/>

    <RadioGroup
        android:id="@+id/radioGroup3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
            android:text="whose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton7"
            android:textSize="14sp"/>

        <RadioButton
            android:text="which"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton8"
            android:textSize="14sp"/>

        <RadioButton
            android:text="whom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton9"
            android:textSize="14sp"/>
    </RadioGroup>

    <TextView
        android:text="Why not ... away, if you don't like it here?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="14sp"/>

    <RadioGroup
        android:id="@+id/radioGroup4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
            android:text="to go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton10"
            android:textSize="14sp"/>

        <RadioButton
            android:text="going"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton11"
            android:textSize="14sp"/>

        <RadioButton
            android:text="go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton12"
            android:textSize="14sp"/>
    </RadioGroup>

    <TextView
        android:text="Can you imagine ... pleasant it was?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="14sp"/>

    <RadioGroup
        android:id="@+id/radioGroup5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
            android:text="what"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton13"
            android:textSize="14sp"/>

        <RadioButton
            android:text="how"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton14"
            android:textSize="14sp"/>

        <RadioButton
            android:text="whether"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton15"
            android:textSize="14sp"/>
    </RadioGroup>

    <TextView
        android:text="He does everything he can ... his friend."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="14sp"/>

    <RadioGroup
        android:id="@+id/radioGroup6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
            android:text="for help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton16"
            android:textSize="14sp"/>

        <RadioButton
            android:text="to help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton17"
            android:textSize="14sp"/>

        <RadioButton
            android:text="helping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton18"
            android:textSize="14sp"/>
    </RadioGroup>

    <Space
        android:layout_width="match_parent"
        android:layout_weight="0.00"
        android:layout_height="20dp"></Space>

    <Button
        android:text="Check Score"
        android:textColor="#ff2600"
        android:layout_gravity="center"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonScore"
        android:textSize="14sp"/>

</LinearLayout>
