<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"></Space>

    <TextView
        android:text="Chose the correct tense ! "
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#ff0000"
        android:textSize="18sp"
        android:id="@+id/textView9"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="0.05"></Space>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="161dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="589dp"
                android:layout_height="22dp"
                android:weightSum="1"
                android:layout_weight="0.08">

                <TextView
                    android:text="I am writing in connection with the advertisement which"
                    android:layout_width="117dp"
                    android:layout_height="match_parent"
                    android:id="@+id/textView10"
                    android:layout_weight="0.80"
                    android:textSize="14sp"/>

                <Spinner
                    android:layout_width="78dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner1"
                    android:layout_weight="0.13" />

                <TextView
                    android:text="on 3 December. "
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_weight="0.10">

                <TextView
                    android:text="You"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView21"
                    android:layout_weight="0.10"
                    android:textSize="14sp"/>

                <Spinner
                    android:layout_width="118dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner2"
                    android:layout_weight="0.30" />

                <TextView
                    android:text="the coffee all over my trousers."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView22"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:weightSum="1"
                android:layout_weight="0.07">

                <TextView
                    android:text="I"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView19"
                    android:layout_weight="0.10"
                    android:textSize="14sp"/>

                <Spinner
                    android:layout_width="109dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner3"
                    android:layout_weight="0.49" />

                <TextView
                    android:text=" to find a permanent job for a considerable time."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView20"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:weightSum="1"
                android:layout_weight="0.06">

                <TextView
                    android:text="The last job I"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView17"
                    android:layout_weight="0.10"
                    android:textSize="14sp"/>

                <Spinner
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner4"
                    android:layout_weight="0.26" />

                <TextView
                    android:text="for required applicants to speak some Japanese."
                    android:layout_width="172dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView18"
                    android:layout_weight="0.66"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="325dp"
                android:layout_height="43dp">

                <TextView
                    android:text="Those potatoes"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:id="@+id/textView14"
                    android:textSize="14sp"/>

                <Spinner
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner5"
                    android:layout_weight="28.80" />

                <TextView
                    android:text="for an hour."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView16"
                    android:layout_weight="1"
                    android:textSize="14sp"/>

            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"></Space>

    <Button
        android:text="Check Score"
        android:textColor="#ff2600"
        android:layout_gravity="center"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonScore"
        android:textSize="14sp"/>



</LinearLayout>